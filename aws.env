# AWS Environment Configuration
# This file contains environment variables for AWS deployment
# Table names and other AWS-specific values will be set by CDK

# Environment Configuration
NODE_ENV=aws
LOG_LEVEL=info
AWS_REGION=us-east-1

# Lambda Function Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=512
LAMBDA_RUNTIME=nodejs18.x

# Table Names (will be overridden by CDK deployment)
DOCTORS_TABLE=${DOCTORS_TABLE}
PATIENTS_TABLE=${PATIENTS_TABLE}
APPOINTMENTS_TABLE=${APPOINTMENTS_TABLE}
DOCTOR_BASIC_INFO_TABLE=${DOCTOR_BASIC_INFO_TABLE}
DOCTOR_PROFILE_TABLE=${DOCTOR_PROFILE_TABLE}
CONSULTATION_SERVICES_TABLE=${CONSULTATION_SERVICES_TABLE}
DOCTOR_AVAILABILITY_TABLE=${DOCTOR_AVAILABILITY_TABLE}

# API Configuration
API_CORS_ORIGINS=*
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token,X-Request-ID
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=1mb

# Error Handling Configuration (production settings)
ENABLE_DETAILED_ERRORS=false
ENABLE_STACK_TRACES=false

# Build Configuration
WATCH_MODE=false
BUILD_TIMEOUT=120
PARALLEL_BUILDS=true

# Testing Configuration
AUTO_VALIDATION=false
VALIDATION_TIMEOUT=60

# Logging Configuration
ENABLE_FILE_LOGGING=false

# DynamoDB Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
DYNAMODB_POINT_IN_TIME_RECOVERY=true

# Application Metadata
APP_NAME=telehealth-api
APP_VERSION=1.0.0